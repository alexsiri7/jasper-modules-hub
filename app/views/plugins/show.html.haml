- model_class = Plugin
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @plugin.name
%p
  %strong= model_class.human_attribute_name(:description) + ':'
  %br
  = @plugin.description
%p
  %strong= model_class.human_attribute_name(:url) + ':'
  %br
  = @plugin.url

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), plugins_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_plugin_path(@plugin), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), plugin_path(@plugin), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
